<%= @list.name %>

<div class="container m-3">
  <div class="row justify-content-center">
        <% @list.bookmarks.each do |bookmark| %>
          <div class="card-category shadow-sm col-12 col-lg-3 m-1">
            <div class="card-product">
              <%= image_tag bookmark.movie.poster_url, style:"background-size: cover, height: 400px" %>
              <div class="card-product-infos">
                <p><%= bookmark.comment %></p>
                <h2><%= bookmark.movie.title %></h2>
                <p><%= bookmark.movie.overview %></p>
              </div>
              <div class="card-product-footer">
                <p><%= bookmark.movie.rating %></p>
                <p><%= link_to "Delete movie", list_path(bookmark), class: "btn btn-primary rounded"%></p>
              </div>
            </div>
          </div>
        <% end %>
  </div>
</div>











<p><%= link_to "Add a new movie", new_list_bookmark_path(@list), class: "btn btn-secondary rounded" %></p>
<p><%= link_to "Home", lists_path %></p>

